<h1>
  Question list
</h1>

<a href="/new_question_form">
  Add a new question
</a>

<hr>

<table class="table table-striped">
  <tr>
    <th>
      #
    </th>

    <th>
      Question
    </th>

    <th>
      Created at
    </th>

    <th>
      Updated at
    </th>

    <th></th>
    <th></th>
  </tr>

  <% @questions.each_with_index do |question,index| %>
  <tr>
    <td>
      <%= index+1 %>
    </td>

    <td>
      <%= question.question %>
    </td>

    <td>
      <%= time_ago_in_words(question.created_at) %> ago
    </td>

    <td>
      <%= time_ago_in_words(question.updated_at) %> ago
    </td>

    <td>
      <a href="/existing_question_form/<%= question.id %>">
        Edit  
      </a>
    </td>
    <td>
      <a href="/delete_question/<%= question.id %>">
        Delete
      </a>
    </td>
    
  </tr>
  <% end %>
</table>
