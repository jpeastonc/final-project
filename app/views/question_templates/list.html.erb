<h1>
  Question list
</h1>

<a href="/new_question_form">
  Add a new question
</a>

<hr>

<table>
  <tr>
    <th>
      ID
    </th>

    <th>
      Question
    </th>

    <th>
      Created at
    </th>

    <th>
      Updated at
    </th>

    <th>
    </th>
  </tr>

  <% @questions.each do |question| %>
  <tr>
    <td>
      <%= question.id %>
    </td>

    <td>
      <%= question.question %>
    </td>

    <td>
      <%= time_ago_in_words(question.created_at) %> ago
    </td>

    <td>
      <%= time_ago_in_words(question.updated_at) %> ago
    </td>

    <td>
      <a href="/questions/<%= question.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
