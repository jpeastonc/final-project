<h1>
  Question category list
</h1>

<a href="/new_question_category_form">
  Add a new question category
</a>

<hr>

<table>
  <tr>
    <th>
      #
    </th>

    <th>
      Question
    </th>

    <th>
      Category
    </th>

    <th>
      Created at
    </th>

    <th>
      Updated at
    </th>

    <th>
    </th>
    
    <th>
    </th>
    
  </tr>

  <% @question_categories.each_with_index do |question_category,index| %>
  <tr>
    <td>
      <%= index %>
    </td>

    <td>
      <%= question_category.question_id %>
    </td>

    <td>
      <%= question_category.category_id %>
    </td>

    <td>
      <%= time_ago_in_words(question_category.created_at) %> ago
    </td>

    <td>
      <%= time_ago_in_words(question_category.updated_at) %> ago
    </td>

    <td>
      <a href="/question_categories/<%= question_category.id %>">
        Show details
      </a>
    </td>
    
    <td>
      <a href="/delete_question_category/<%= question_category.id %>">
        Delete
      </a>
    </td>
    
  </tr>
  <% end %>
</table>
