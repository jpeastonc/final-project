<h1>
  Edit category: <%= @category.category_name %>
</h1>

<hr>

<%= render("category_templates/validation_failures.html.erb") %>

<form action="/update_category_record/<%= @category.id %>" method="post">
  <div>
    <label for="category_name">
      Category name
    </label>

    <input type="text" id="category_name" name="category_name" value="<%= @category.category_name %>">
  </div>

  <button>
    Update category
  </button>
</form>

<hr>

<a href="/categories">
  Go back
</a>
