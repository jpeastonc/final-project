<h1>
  Category list
</h1>

<a href="/new_category_form">
  Add a new category
</a>

<hr>

<table class="table table-striped">
  <tr>
    <th>
      #
    </th>

    <th>
      Category name
    </th>

    <th>
      Created at
    </th>

    <th>
      Updated at
    </th>

    <th>
    </th>
    
    <th>
    </th>
    
  </tr>

  <% @categories.each_with_index do |category,index| %>
  <tr>
    <td>
      <%= index+1 %>
    </td>

    <td>
      <%= category.category_name %>
    </td>

    <td>
      <%= time_ago_in_words(category.created_at) %> ago
    </td>

    <td>
      <%= time_ago_in_words(category.updated_at) %> ago
    </td>

    <td>
      <a href="/categories/<%= category.id %>">
        Show details
      </a>
    </td>
    <td>
      <a href="/delete_category/<%= category.id %>">
        Delete
      </a>
    </td>    
    
    
  </tr>
  <% end %>
</table>
