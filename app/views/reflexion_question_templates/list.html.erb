<h1>
  Reflexion question list
</h1>

<a href="/new_reflexion_question_form">
  Add a new reflexion question
</a>

<hr>

<table>
  <tr>
    <th>
      ID
    </th>

    <th>
      Question
    </th>

    <th>
      Reflexion question
    </th>

    <th>
      Created at
    </th>

    <th>
      Updated at
    </th>

    <th>
    </th>
  </tr>

  <% @reflexion_questions.each do |reflexion_question| %>
  <tr>
    <td>
      <%= reflexion_question.id %>
    </td>

    <td>
      <%= reflexion_question.question_id %>
    </td>

    <td>
      <%= reflexion_question.reflexion_question %>
    </td>

    <td>
      <%= time_ago_in_words(reflexion_question.created_at) %> ago
    </td>

    <td>
      <%= time_ago_in_words(reflexion_question.updated_at) %> ago
    </td>

    <td>
      <a href="/reflexion_questions/<%= reflexion_question.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
