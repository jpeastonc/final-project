<h1>
  User question list
</h1>

<a href="/new_user_question_form">
  Add a new user question
</a>

<hr>

<table>
  <tr>
    <th>
      ID
    </th>

    <th>
      User
    </th>

    <th>
      Question
    </th>

    <th>
      Created at
    </th>

    <th>
      Updated at
    </th>

    <th>
    </th>
  </tr>

  <% @user_questions.each do |user_question| %>
  <tr>
    <td>
      <%= user_question.id %>
    </td>

    <td>
      <%= user_question.user_id %>
    </td>

    <td>
      <%= user_question.question_id %>
    </td>

    <td>
      <%= time_ago_in_words(user_question.created_at) %> ago
    </td>

    <td>
      <%= time_ago_in_words(user_question.updated_at) %> ago
    </td>

    <td>
      <a href="/user_questions/<%= user_question.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
